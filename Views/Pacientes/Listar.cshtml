@model IEnumerable<Models.ViewModel.PacientesViewModel>
@{
    ViewData["Title"] = "Lista de Pacientes";
    var path = "http://localhost:5050/Imagens/";
}

<h2>@ViewData["Title"]</h2>

@Html.ActionLink("Novo", "Cadastro", "Pacientes")

<table class="table">
    <thead>
        <tr>
            <th>
                Foto
            </th>
            <th>
                @Html.DisplayNameFor(model => model.codp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.doenca)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th>
                    <img src="@(item.imagePath == null ?
                            path + "profileDefault.png" :  
                            path + item.imagePath)"
                class="img-thumbnail rounded-circle shadow-sm" style="width: 50px; height: 50px; object-fit: cover" />
                </th>

                <th>
                    @Html.DisplayFor(model => item.codp)
                </th>
                <th>
                    @Html.DisplayFor(model => item.nome)
                </th>
                <th>
                    @Html.DisplayFor(model => item.idade)
                </th>
                <th>
                    @Html.DisplayFor(model => item.cidade)
                </th>
                <th>
                    @Html.DisplayFor(model => item.CPF)
                </th>
                <th>
                    @Html.DisplayFor(model => item.doenca)
                </th>
                <th>
                    @Html.ActionLink("Editar", "Cadastro", "Pacientes", new {codp = item.codp} )
                    |
                    @Html.ActionLink("Excluir", "Excluir", "Pacientes", new {codp = item.codp} )
                </th>
            </tr>
        }
    </tbody>
</table>
